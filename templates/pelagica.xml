<?xml version="1.0"?>
<Container version="2">
    <Name>Pelagica</Name>
    <Repository>kartoffelchipss/pelagica:latest</Repository>
    <Registry>https://hub.docker.com/r/kartoffelchipss/pelagica</Registry>
    <Network>bridge</Network>
    <Shell>bash</Shell>
    <Privileged>false</Privileged>
    <Support>https://github.com/KartoffelChipss/pelagica/issues</Support>
    <Project>https://github.com/KartoffelChipss/pelagica</Project>
    <Overview>An alternative, modern and configurable web frontend for Jellyfin built using React. Provides a fast, modern, and customizable user experience for browsing and watching your media library.</Overview>
    <Category>MediaApp:Video MediaServer:Video Status:Stable</Category>
    <WebUI>http://[IP]:[PORT:80]</WebUI>
    <Icon>https://raw.githubusercontent.com/JamsRepos/Unraid-Templates/master/logos/pelagica.png</Icon>
    <TemplateURL>https://raw.githubusercontent.com/JamsRepos/Unraid-Templates/main/templates/pelagica.xml</TemplateURL>
    <Maintainer>
        <WebPage>https://github.com/JamsRepos</WebPage>
    </Maintainer>
    <Config Name="Web UI Port" Target="80" Default="8080" Mode="tcp" Description="The port for accessing the Pelagica web interface." Type="Port" Display="always" Required="true" Mask="false">8080</Config>
    <Config Name="Config Folder" Target="/config" Default="" Mode="rw" Description="Path to the config folder." Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/pelagica</Config>
</Container>
