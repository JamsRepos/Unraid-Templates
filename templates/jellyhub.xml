<?xml version="1.0"?>
<Container version="2">
    <Name>JellyHub</Name>
    <Repository>zigleur/jellyhub:latest</Repository>
    <Registry>https://hub.docker.com/r/zigleur/jellyhubr</Registry>
    <Network>host</Network>
    <Shell>bash</Shell>
    <Privileged>false</Privileged>
    <Support>https://github.com/Zigl3ur/jellyhub/issues</Support>
    <Project>https://github.com/Zigl3ur/jellyhub</Project>
    <Overview>Indexes all content from multiple Jellyfin servers, allowing you to see which items are available on which server.  </Overview>
    <Category>Downloaders: MediaApp:Video</Category>
    <WebUI>http://[IP]:[PORT:3000]</WebUI>
    <Icon>https://raw.githubusercontent.com/JamsRepos/Unraid-Templates/master/logos/jellyhub.png</Icon>
    <TemplateURL>https://raw.githubusercontent.com/JamsRepos/Unraid-Templates/main/templates/jellyhub.xml</TemplateURL>
    <Maintainer>
        <WebPage>https://github.com/JamsRepos</WebPage>
    </Maintainer>
    <Requires>
        This container requires a Postgres database to function.  &#xD;
        Please ensure you have a Postgres database running before starting this container.  &#xD;
    </Requires>
    <Config Name="Web UI Port" Target="3000" Default="" Mode="tcp" Description="" Type="Port" Display="always" Required="true" Mask="false">3000</Config>
    <Config Name="JWT Secret" Target="JWT_SECRET" Default="your-very-long-and-mysterious-secret" Mode="" Description="Change this to a random secure string." Type="Variable" Display="always" Required="true" Mask="true">your-very-long-and-mysterious-secret</Config>
    <Config Name="Postgres Connection String" Target="DATABASE_URL" Default="postgresql://jellyhub:jellyhub@localhost:5432/jellyhub?schema=prisma" Mode="" Description="Change this to your Postgres connection string." Type="Variable" Display="always" Required="true" Mask="true">postgresql://jellyhub:jellyhub@localhost:5432/jellyhub?schema=prisma</Config>
</Container>
